<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <!-- Login progress -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Question 3"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/question3"
        android:layout_width="398dp"
        android:layout_height="192dp"
        android:layout_marginTop="25dp"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/trivia1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="381dp"
                android:layout_height="145dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="What is it called when a player scores two goals in a game of soccer?"
                android:textSize="18sp"
                tools:text="What is it called when a player scores two goals in a game of soccer?" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/answers1"
        android:layout_width="411dp"
        android:layout_height="454dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <Button
            android:id="@+id/correct_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="A brace" />

        <Button
            android:id="@+id/hatTrick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="A Hat Trick" />

        <Button
            android:id="@+id/goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="A Goal" />

        <Button
            android:id="@+id/messi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="A Messi" />
    </LinearLayout>


</LinearLayout>